# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/baby_tracker

# Environment
NODE_ENV=development

# Timezone configuration
# BABY_HOME_TIMEZONE sets the local day boundary for stats (defaults to Asia/Hong_Kong)
# DB_STORAGE_TIMEZONE declares the timezone of legacy timestamp columns for migrations
BABY_HOME_TIMEZONE=Asia/Hong_Kong
DB_STORAGE_TIMEZONE=UTC
